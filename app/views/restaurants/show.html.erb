<h1><%= @restaurant.name %></h1>
  <%= @restaurant.category %>
  <br>
  <%= @restaurant.address %>
  <br>
  <%= @restaurant.phone_number %>
  <br>
  <p>Reviews</p>
  <br>
  <% @restaurant.reviews.each do |review|%>
    <%review.rating.times do%>
      <i class="far fa-star"></i>
     <% end %>
    <br>
    <%= review.content %>
    <br>
  <% end %>


<%= link_to "Add a new review",  new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

 